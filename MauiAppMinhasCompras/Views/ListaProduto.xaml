<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>
        <!-- ✅ Novo botão para abrir Relatório -->
        <ToolbarItem Text="Relatório" Clicked="ToolbarItem_Relatorio_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Grid com três linhas: SearchBar, Picker e ListView -->
    <Grid RowDefinitions="Auto, Auto, *" Padding="10">

        <!-- Linha 0: SearchBar -->
        <SearchBar x:Name="txt_search"
                   Margin="-15,0,0,0"
                   Placeholder="Busca de Produtos"
                   TextChanged="txt_search_TextChanged"
                   Grid.Row="0"/>

        <!-- Linha 1: Picker de Categorias -->
        <Picker x:Name="pickerCategoria"
                Title="Selecione uma categoria"
                SelectedIndexChanged="pickerCategoria_SelectedIndexChanged"
                Grid.Row="1">
            <Picker.Items>
                <x:String>Todos</x:String>
                <x:String>Alimentos</x:String>
                <x:String>Bebidas</x:String>
                <x:String>Limpeza</x:String>
                <x:String>Higiene</x:String>
            </Picker.Items>
        </Picker>

        <!-- Linha 2: Frame com ListView -->
        <Frame Padding="0" Grid.Row="2">
            <ListView x:Name="lst_produtos"
                      IsPullToRefreshEnabled="True"
                      Refreshing="lst_produtos_Refreshing"
                      ItemSelected="lst_produtos_ItemSelected">
                <ListView.Header>
                    <!-- ✅ Adicionei uma coluna a mais para Categoria -->
                    <Grid ColumnDefinitions="30, 100, 80, 50, 90, 120, 120"
                          BackgroundColor="{StaticResource Gray100 }">
                        <Label Grid.Column="0" Text="ID" Padding="5" FontAttributes="Bold"/>
                        <Label Grid.Column="1" Text="Descrição" FontAttributes="Bold"/>
                        <Label Grid.Column="2" Text="Preço" FontAttributes="Bold"/>
                        <Label Grid.Column="3" Text="Qnt" FontAttributes="Bold"/>
                        <Label Grid.Column="4" Text="Total" FontAttributes="Bold"/>
                        <Label Grid.Column="5" Text="Data Compra" FontAttributes="Bold"/>
                        <Label Grid.Column="6" Text="Categoria" FontAttributes="Bold"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                            </ViewCell.ContextActions>
                            <!-- ✅ Agora com Categoria -->
                            <Grid ColumnDefinitions="30, 100, 80, 50, 90, 120, 120">
                                <Label Grid.Column="0" Text="{Binding Id}" Padding="5"/>
                                <Label Grid.Column="1" Text="{Binding Descricao}"/>
                                <Label Grid.Column="2" Text="{Binding Preco,StringFormat='{}{0:C}'}"/>
                                <Label Grid.Column="3" Text="{Binding Quantidade}"/>
                                <Label Grid.Column="4" Text="{Binding Total,StringFormat='{}{0:C}'}"/>
                                <Label Grid.Column="5" Text="{Binding DataCadastro, StringFormat='{0:dd/MM/yyyy}'}"/>
                                <Label Grid.Column="6" Text="{Binding Categoria}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
    </Grid>
</ContentPage>
