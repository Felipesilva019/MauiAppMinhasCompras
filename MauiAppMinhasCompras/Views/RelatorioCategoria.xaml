<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.RelatorioCategoria"
             Title="RelatÃ³rio por Categoria">

    <CollectionView x:Name="RelatorioCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Categoria}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="{Binding Total, StringFormat='Total: {0:C}'}" FontSize="16"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>